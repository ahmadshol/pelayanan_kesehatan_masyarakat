<LoginScreen>:
    name: 'page_one'

    BoxLayout:
        orientation: 'vertical'
        padding: [20, 20, 20, 20]
        spacing: 10

        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Widget:
            size_hint_x: 0.08

        Label:
            text: "Aplikasi\nKesehatan\nMasyarakat"
            font_size: 28
            size_hint_y: None
            height: 135
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            color: 0, 0, 0, 1

        # BoxLayout for buttons to keep them in a column
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            BoxLayout:
                orientation: 'horizontal'
                size_hint: None, None
                size: 300, 40
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                spacing: -120


                # Menggambar background rounded kuning
                canvas.before:
                    Color:
                        rgba: 1, 0.8, 0, 1  # Warna kuning
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]  # Membuat sudut membulat

                Image:
                    source: 'img/facebook.png'
                    size_hint: 0.5 , 0.5
                    size: 30, 30
                    pos_hint: {'center_y': 0.5 ,'center_x': 0.5}   # Memastikan ikon di tengah vertikal

                Button:
                    size_hint_y: None
                    pos_hint: {'center_y': 0.5 ,'center_x': 0.5}
                    height: 50
                    text: "Continue with Facebook"
                    background_normal: ''
                    background_color: 1, 1, 1, 0  # Transparan agar warna background dari canvas terlihat
                    color: 0, 0, 0, 1  # Warna teks hitam
                    on_release: app.root.current = 'account'

            BoxLayout:
                orientation: 'horizontal'
                size_hint: None, None
                size: 300, 40
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                spacing: -120


                # Menggambar background rounded kuning
                canvas.before:
                    Color:
                        rgba: 1, 0.8, 0, 1  # Warna kuning
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]  # Membuat sudut membulat

                Image:
                    source: 'img/logogoogle.png'
                    size_hint: 0.5 , 0.5
                    size: 30, 30
                    pos_hint: {'center_y': 0.5 ,'center_x': 0.5}   # Memastikan ikon di tengah vertikal

                Button:
                    size_hint_y: None
                    pos_hint: {'center_y': 0.5 ,'center_x': 0.5}
                    height: 50
                    text: "Continue with Google"
                    background_normal: ''
                    background_color: 1, 1, 1, 0  # Transparan agar warna background dari canvas terlihat
                    color: 0, 0, 0, 1  # Warna teks hitam
                    on_release: app.root.current = 'page_two'

        Button:
            text: "Registrasi / Membuat Akun"
            size_hint_y: None
            height: 30
            background_normal: ''
            background_color: (0, 0, 0, 0)
            color: (0, 0, 1, 1)
            italic: True
            on_press: app.root.current = 'registrasi'

        Button:
            text: "Masuk sebagai tamu"
            size_hint_y: None
            height: 50
            background_normal: ''
            background_color: (0.5, 0.5, 0.5, 1)
            color: (0, 0, 0, 1)
            on_press: root.guest_login()

        Widget:
            size_hint_x: 0.08

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30
            spacing: 10
            pos_hint: {'center_x': .5}

            Button:
                text: "Ketentuan Layanan"
                color:(0,0,1,1)
                background_normal:''
                background_color:(0,0,0,0)
                on_press : print("Ketentuan Layanan clicked")

            Button:
                text:"Kebijakan Privasi"
                color:(0 ,0 ,1 ,1)
                background_normal:''
                background_color:(0 ,0 ,0 ,0)
                on_press : print("Kebijakan Privasi clicked")


<LoginSecondScreen>:
    name: 'page_two'
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 0, 50, 80]
        spacing: 20
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Widget:
            size_hint_x: 0.08
        Label:
            text: 'Login'
            font_size: '24sp'
            bold: True
            color: 0 , 0 , 0 , 1
        TextInput:
            id: email
            hint_text: 'Email'
            size_hint_y: None
            background_color: 1, 1, 1, 0
            height: 40
        TextInput:
            id: password
            hint_text: 'Password'
            password: True
            size_hint_y: None
            background_color: 1, 1, 1, 0
            height: 40
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: 280, 40
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            spacing: -120
            canvas.before:
                Color:
                    rgba: 1, 0.8, 0, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
            Button:
                size_hint_y: None
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                height: 50
                text: "Login"
                background_normal: ''
                background_color: 1, 1, 1, 0
                color: 0, 0, 0, 1
                on_release: app.login(email.text, password.text)
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30
            pos_hint: {'center_x': 0.2, 'center_y': 0.2}
            CheckBox:
                color: [0, 0, 0, 1]
            Label:
                color: [0, 0, 0, 1]
                font_size: 11
                text: 'ingat saya'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30
            Label:
                text: 'Ketentuan layanan dan Kebijakan privasi'
                color: [0, 0, 1, 1]
